<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.sist.instructor.member.login.InstructorLoginMapper">

    <!-- 강사 로그인 조회 -->
    <select id="selectInstructor" parameterType="String" resultType="kr.co.sist.instructor.member.InstructorDomain">
        SELECT INST_ID as instId, PASSWORD, NAME, APPROVAL, ACTIVATION
        FROM INSTRUCTOR
        WHERE INST_ID = #{instId}
    </select>

</mapper>
